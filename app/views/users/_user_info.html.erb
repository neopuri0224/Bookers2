        <div class="user-info">
      	    <h1>User Info</h1>
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "100x100"  %>
              <table class="table">
                <tbody>
                  <tr>
                    <th>name</th>
	                  <td>
                      <%= current_user.name %>
                    </td>
                  </tr>
                  <tr>
                    <th>introduction</th>
                    <td>
                      <%= current_user.caption %>
                    </td>
                  </tr>
                </tbody>
              </table>
              <%= link_to edit_user_path(current_user.id), class: "edit_user_#{current_user.id}" do %>
              <button class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
              </button>
              <% end %>
        </div>