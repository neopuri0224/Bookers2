<body>
  <div class="container">
  	<% if flash[:notice] %>
  		<div class="flash">
  		  	<%= flash[:notice] %>
  		</div>
    <% else %>
      <div class="error-flash">
          <%= flash[:danger] %>
      </div>
  	<% end %>
    <div class="row">
      <div class="col-xs-3">
      <%= render 'users/user_info' %>
      <%= render 'books/list', book: @book %>
      </div>
        <div class="col-xs-9">
          <h1>Books</h1>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>&nbsp;</th>
                <th>Title</th>
                <th>Opinion</th>
                <th>Created_at</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:"50x50" %>
                </td>
                <td>
                 <%= link_to book_path(book.id), class: "book_#{book.id}" do %>
                 <%= book.title %>
                 <% end %>
                 </td>
                <td>
                 <%= book.category %>
                </td>
                <td>
                 <%= book.created_at.strftime('%Y/%m/%d') %>
                 </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @books, class: "pagination" %>
        </div>
      </div>
  </div>
<body>

