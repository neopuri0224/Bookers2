<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <p class="navbar-text">Bookers</p>
        </div>
        <div class="collapse navbar-collapse" id="navbarEexample">
          <div class="row">
            <ul class="nav navbar-nav navbar-right col-lg-4">
              <li class="">
                <%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home home" %>
              </li>
              <li class="">
                <%= link_to 'Users', users_path, class: "glyphicon glyphicon-link users" %>
              </li>
              <li class="">
                <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book books" %>
              </li>
              <li class="">
                <%= link_to 'logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  <% else %>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <p class="navbar-text">Bookers</p>
        </div>
        <div class="collapse navbar-collapse" id="navbarEexample">
          <div class="row">
            <ul class="nav navbar-nav navbar-right col-lg-4">
              <li class="">
                <%= link_to 'Home', root_path, class: "glyphicon glyphicon-home home" %>
              </li>
              <li class="">
                <%= link_to 'About', about_path, class: "glyphicon glyphicon-link about" %>
              </li>
              <li class="">
                <%= link_to 'sign up', new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
              </li>
              <li class="">
                <%= link_to 'login', new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  <% end %>
    <%= yield %>
  <footer>
    <div class="row">
      <p class="col-xs-8 col-xs-offset-2 text-right">CopyRight Infratop.inc</p>
    </div>
  </footer>
  </body>
</html>
